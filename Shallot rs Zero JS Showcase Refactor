pub struct Button<'a> {
    pub label: &'a str,
    pub variant: ButtonVariant,
    pub size: ButtonSize,
    pub disabled: bool,
    pub href: Option<&'a str>,
}

impl<'a> Button<'a> {
    pub fn new(label: &'a str) -> Self { ‚Ä¶ }
    pub fn variant(mut self, v: ButtonVariant) -> Self { ‚Ä¶ }
    pub fn size(mut self, s: ButtonSize) -> Self { ‚Ä¶ }
    pub fn disabled(mut self, d: bool) -> Self { ‚Ä¶ }
    pub fn href(mut self, href: &'a str) -> Self { ‚Ä¶ }

    pub fn render(self) -> Markup {
        // Renders <button> or <a role="button"> based on href
        html! {
            button type="button" class=(class) disabled?[self.disabled] {
                (self.label)
            }
        }
    }
}"#,
                    r#".sh-btn {
    display: inline-flex;
