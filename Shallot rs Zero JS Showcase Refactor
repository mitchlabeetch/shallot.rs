    background: var(--sh-surface, #fff);
    border-radius: var(--sh-radius-md, 0.5rem);
    overflow: hidden;
}

.sh-accordion-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--sh-text, #1f2937);
