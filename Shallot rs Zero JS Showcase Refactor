/* ‚îÄ‚îÄ Animation pair trick: two identical @keyframes with different names.
   Toggling the checkbox switches between name-a and name-b.
   Each name-change forces the browser to restart the animation.
   The user experiences a seamless replay on every click.              ‚îÄ‚îÄ */

/* Generic entry animation A */
@keyframes sh-entry-a {
  from {
    opacity: 0;
    transform: translateY(12px) scale(0.96);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}
/* Generic entry animation B (identical visually ‚Äî different name = restart) */
@keyframes sh-entry-b {
  from {
    opacity: 0;
    transform: translateY(12px) scale(0.96);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Scale-pop A / B */
@keyframes sh-pop-a {
  0% {
    opacity: 0;
    transform: scale(0.7);
  }
  70% {
    transform: scale(1.06);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}
@keyframes sh-pop-b {
  0% {
    opacity: 0;
    transform: scale(0.7);
  }
  70% {
    transform: scale(1.06);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* Slide-right A / B */
@keyframes sh-slide-r-a {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}
@keyframes sh-slide-r-b {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Fade A / B */
@keyframes sh-fade-a {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes sh-fade-b {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Staggered children: each .sh-anim inside .sh-demo-preview gets its own delay */
.sh-anim {
  animation: sh-entry-a 0.5s var(--sh-ease-out) both;
}
.sh-anim:nth-child(1) {
  animation-delay: 0s;
