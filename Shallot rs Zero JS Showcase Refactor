    outline: none;
    border-color: var(--sh-primary);
    box-shadow: 0 0 0 3px var(--sh-primary-bg);
}

/* CSS :invalid ‚Äî no JS validation needed for basic patterns */
.sh-input:invalid:not(:placeholder-shown) {
    border-color: var(--sh-error);
}"#,
