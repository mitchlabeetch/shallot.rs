        hex: "#6366f1",
        hex_hover: "#4f46e5",
        rgb: "99,102,241",
    },
];

// ‚îÄ‚îÄ Hidden color-radio inputs (must be first children of <body>) ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

fn color_radio_inputs() -> Markup {
    html! {
        @for (i, tc) in THEME_COLORS.iter().enumerate() {
            input
                type="radio"
                name="sh-theme-color"
                id=(format!("sh-tc-{}", tc.id))
                class="sh-tc-radio"
                checked?[i == 0];
        }
    }
}

