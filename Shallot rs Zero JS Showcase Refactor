use maud::html;

impl Marquee {
    pub fn new(items: Vec<Markup>) -> Self { ‚Ä¶ }
    pub fn speed(mut self, s: f32) -> Self { ‚Ä¶ }
    pub fn pause_on_hover(mut self, p: bool) -> Self { ‚Ä¶ }
    pub fn variant(mut self, v: MarqueeVariant) -> Self { ‚Ä¶ }
    pub fn direction(mut self, d: MarqueeDirection) -> Self { ‚Ä¶ }

    pub fn render(self) -> Markup {
        html! {
            div class="sh-marquee sh-marquee--gradient sh-marquee--pause" {
                div class="sh-marquee__track" {
                    @for item in &self.items { div class="sh-marquee__item" { (item) } }
