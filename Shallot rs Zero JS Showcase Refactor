    --sh-radius-xl: 0;
}

#option-shadows:not(:checked) ~ * {
    --sh-shadow-sm: none;
    --sh-shadow-md: none;
    --sh-shadow-lg: none;
    --sh-shadow-xl: none;
}

@media (prefers-reduced-motion: reduce) {
    .sh-theme-switcher {
        transition: none;
    }

    .sh-theme-preset {
        transition: none;
    }
}
